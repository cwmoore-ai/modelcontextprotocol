{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "schema/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
